this.buttonThree.stop();
this.query_Bot.stop(); 
this.query_Bot.wrongEffect.stop();

// Add event listeners to buttons
this.buttonThree.addEventListener("pointerdown", handleDown);
this.buttonThree.addEventListener("mousedown", handleDown);



